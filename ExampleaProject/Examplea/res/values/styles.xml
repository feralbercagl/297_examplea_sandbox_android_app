<?xml version="1.0"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="ActionBar.Solid.Ap" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_ap</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_ap</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_ap</item>
        <item name="progressBarStyle">@style/ProgressBar.Ap</item>
    </style>
    
    

    <style name="ActionBar.SubtitleTextStyle.Ap" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
    </style>
    
    <style name="ActionBar.Transparent.Ap" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_ap</item>
        <item name="progressBarStyle">@style/ProgressBar.Ap</item>
    </style>

    <style name="PopupMenu.Ap" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ap</item>
    </style>

    <style name="DropDownListView.Ap" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ap</item>
    </style>

    <style name="ActionBarTabStyle.Ap" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ap</item>
    </style>

    <style name="DropDownNav.Ap" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_ap</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ap</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ap</item>
    </style>

    <style name="ProgressBar.Ap" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ap</item>
    </style>

    <style name="ActionButton.CloseMode.Ap" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ap</item>
    </style>
    
    <style name="ActionBarTabTextStyle.Ap" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
      <!-- Add custom text styles here -->
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ap.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Ap</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Ap</item>
    </style>

<style name="ActionBar.TitleTextStyle.Ap" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/ap_custom_theme_title_font_color</item></style></resources>
